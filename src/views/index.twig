{% set page = 'index' %}
{% extends "@layouts/base.twig" %}
{% block necker %}
	{% include "@cmpt/carou/carou2.twig" with {
   mode:"basic",
     color:"light",
     animation:"slide-left",
     height:"auto",
     nav:false,
     autoplay:true,
     lazy:true,
     dots:true,
     rows: [
			 {
				title:"Banner 各行各業的工作成果",
				thumbnail:{
					src:"/assets/images/banner.jpg",
				},
				mobile:"/assets/images/banner-m.jpg",
			},
			{
				title:"Banner 各行各業的工作成果",
				thumbnail:{
					src:"/assets/images/differect-people-working.jpg",
				},
				mobile:"/assets/images/banner-m.jpg",
			}
		],
     _slot:{
       src:"@cmpt/carou/item.twig",
