<nav class="paginations --{{mode}} {{cls}}" role="navigation" aria-label="pagination">
	<div class="pages ">
		{% if ranges is defined %}

			<span class="">{{ranges.start}}
				-
				{{ranges.end}}</span>
			/
			<span class="total">
				{{ __('共 %s 筆', 'tbs')|format(ranges.total) }}
			</span>

		{% else %}
			<span class="current">{{row.current}}</span>
			/
			<span class="total">
				{{row.total}}</span>

		{% endif %}


	</div>
	{# PAGINATION LIST #}
	<ul class="pagination">

		{% if row.prev is defined %}
			<li class="page-item">
				<a class="page-link" href="{{row.prev.link}}">
					<i class="icon icon-angle-left"></i>
				</a>
			</li>
		{% endif %}

		{% for page in row.pages %}
			{% if page.link %}
				<li class="page-item">
					<a href="{{ page.link }}" class="{{ page.class }} pagination-link" aria-label="Goto page {{ page.title }}">{{ page.title }}</a>
				</li>
			{% else %}

				{% if page.class == 'dots' %}
					<li class="page-item">
						<span class="ellipsis">&hellip;</span>
					</li>
				{% else %}
					<li class="page-item active">
						<a class="page-link" href="{{ page.link }}">{{ page.title }}</a>
					</li>
				{% endif %}
			{% endif %}

		{% endfor %}
		{# NEXT BUTTON #}
		{% if row.next is defined %}
			<li class="page-item">
				<a class="page-link" href="{{row.next.link}}">
					<i class="icon icon-angle-right"></i>
				</a>
			</li>
		{% endif %}
	</ul>
</nav>
