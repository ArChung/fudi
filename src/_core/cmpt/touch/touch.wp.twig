<form class="form flex flex-wrap">
	<div class="input-field w-6/12">
		<input class="form-control" type="text" required name="name"/>
		<label for="name">
			{{'姓名' | t }}
		</label>
	</div>
	<div class="input-field w-6/12">
		<input class="form-control" type="email" name="email"/>
		<label for="email">
			{{'Email' | t }}
		</label>
	</div>
	<div class="input-field w-full">
		<select class="browser-default w-full">
			<option>
				{{'產品相關' |t }}
			</option>
			<option>
				{{'退貨相關' |t }}
			</option>
		</select>
		<label class="active" for="email">
			{{'主題' | t }}
		</label>
	</div>
	<div class="input-field w-full">
		<textarea class="materialize-textarea" placeholder="{{'請輸入你的問題' | t }}" rows="10" style="height:100px;" name="message"></textarea>
		<label for="textarea2">
			{{'訊息' | t }}
		</label>
	</div>
	<div class="input-actions  w-full ">
		<a class="gee btn btn-block btn-lighter w-full" data-gene="click:stdSubmit" {# data-uri="/sender/wp_sender" #} data-uri="{{endpoint}}" href="javascript:;">
			{{'Submit' |t }}
		</a>
	</div>
</form>
